<UserControl x:Class="ImageStitchingSystem.Base"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImageStitchingSystem"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="850"
      >

    <StackPanel Background="#eeeeee" Margin="16" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" Margin="16,16,0,0">
            <Button x:Name="button" Content="加载图像" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="85" Height="24" Click="button_Click"/>
            <Button x:Name="loadimg" Content="新增图像" HorizontalAlignment="Left" Margin="16,0,0,0" VerticalAlignment="Top" Width="85" Height="24" Click="button_Click"/>
        </StackPanel>
        <ScrollViewer Margin="0 16 0 0">
            <Grid Grid.Column="4" Name="baseGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
    </StackPanel>
    
</UserControl>
